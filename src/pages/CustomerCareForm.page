                    document.getElementById('ccpage:ccform:licensing_details').style.display = 'none';
                    document.getElementById('ccpage:ccform:generalQuest_details').style.display = 'none';
                    document.getElementById('ccpage:ccform:casupportportal_details').style.display = 'none';  
