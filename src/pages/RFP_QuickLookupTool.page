  function ajaxCall(pURL, pCallback, pWaitDialog)
  {
    var callback = 
    {
      success: function(o)
      {
        g_waitDialog.hide();
        pCallback(o);   
      },
      failure: function()
      {
        g_waitDialog.hide();        
        alert('It failed!');
      }
    };
    if ((pWaitDialog == null) || (pWaitDialog == true))
    {
      g_waitDialog.show();
    }
    var request = YAHOO.util.Connect.asyncRequest('POST', pURL, callback);
  }
  
