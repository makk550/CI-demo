        function getMyData(response,param){           
            Visualforce.remoting.Manager.invokeAction(
                '{!$RemoteAction.entitlementsController.searchProdControllerList}',
                param, 
                function(result, event){
                    //  alert('Input');
                    if (event.status) {   
                        //    alert('Input Once');
                        var objList = [];
                        for(var i = 0; i < result.length; i++){
                            var obj = new Object();
                            obj.label = result[i].Name;
                            obj.value = result[i].Name;
                            obj.id = result[i].Id;
                            objList.push(obj);
                        }
                        response(objList);
                    }else {
                        alert(event.message);
                    }
                }, 
                {escape: true}
            );
        }     
</script>
