        })
        .data( "ui-autocomplete" )._renderItem = function( ul, item ) { 
            var entry='';
            if(item.Name=='XXXX'){
                item.Name='';
                entry = "<a>" + 'No Records Found';
            }else{
                entry = "<a>" + item.SC_TOPS_ID__c+','+item.Name +','+item.City__c+','+item.Country_Picklist__c;
