                    document.getElementById('ccpage:ccform:captcha_id').style.display = 'none';             
                    document.getElementById('ccpage:ccform:buttons_id').style.display = 'none';
                } else {
                    renderDetails(); // Aded for submit scenario
                }
            };
            
